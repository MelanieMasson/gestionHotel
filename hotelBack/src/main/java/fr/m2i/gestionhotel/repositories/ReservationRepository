package fr.m2i.gestionhotel.repositories;

import fr.m2i.gestionhotel.entities.ReservationEntity;
import org.springframework.data.repository.CrudRepository;

public interface ReservationRepository extends CrudRepository<ReservationEntity , Integer> {

    Iterable<ReservationEntity> findByChambre( int numChambre );

    Iterable<ReservationEntity>findByClientContainsOrHotelContainsOrDatedebutContainsOrDatefinContainsOrChambreContains( ClientEntity client , HotelEntity hotel, Date datedeb, Date datefin, int numChambre );
}