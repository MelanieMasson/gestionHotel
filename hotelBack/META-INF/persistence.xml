<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

      <class>entity.AdminEntity</class>
      <class>entity.ClientEntity</class>
      <class>entity.HotelEntity</class>
      <class>entity.ReservationEntity</class>
      <properties>
          <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/gestion_hotel"/>
          <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
          <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/gestion_hotel"/>
          <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
          <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/gestion_hotel"/>
          <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
          <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/gestion_hotel"/>
          <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      </properties>
  </persistence-unit>
</persistence>
